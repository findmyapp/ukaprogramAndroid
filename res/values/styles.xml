<?xml version="1.0" encoding="utf-8"?>
<resources>
	<color name="custom_theme_color">#000000</color>
	<color name="black">#000000</color>
	<color name="uka_red">#8F0000</color>
	<color name="uka_purple">#4019FF</color>
	<color name="uka_greygreen">#73FF8C</color>
	<color name="uka_yellow">#FFD919</color>
	<color name="uka_green">#BFFF19</color>
	<color name="uka_blue">#4DFFD9</color>
	<color name="uka_pink">#E04DFF</color>
	<color name="uka_orange">#FF5919</color>
	<color name="white">#FFFFFF</color>
	<color name="grey">#F7F9F6</color>

	<style name="BigFont" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">@color/black</item>
	</style>
	<style name="MediumFont" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/black</item>
	</style>
	<style name="SmallFont" parent="@android:style/TextAppearance.Small">

		<item name="android:textColor">@color/black</item>
	</style>

	<style name="BigDayNumber" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">22dp</item>
	</style>



	<style name="CustomTheme" parent="android:Theme.Light">
		<item name="android:windowBackground">@color/white</item>
		<item name="android:colorBackground">@color/white</item>
	</style>

	<style name="Button" parent="@android:style/TextAppearance.Small">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">14dp</item>
		<item name="android:colorBackground">@color/grey</item>
	</style>
	
	 <style name="CalendarButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:background">@drawable/event_list_calendar_button</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>
    
   	<style name="EventCategoryButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:background">@drawable/event_list_event_type_button</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
